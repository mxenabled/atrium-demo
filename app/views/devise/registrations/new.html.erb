<div class="container">
  <div class="box is-light-gray top-margin-small">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: "label has-text-white" %><br />
        <%= f.email_field :email, class: 'input is-rounded is-primary', autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "label has-text-white"%>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, class: "input is-rounded is-primary", autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "label has-text-white" %><br />
        <%= f.password_field :password_confirmation, class: "input is-rounded is-primary", autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "button is-primary" %>
      </div>
    <% end %>
  </div>
</div>
